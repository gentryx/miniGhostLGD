# Example runscript, configured for the Cray XK6.

cd $PBS_O_WORKDIR

ARCH=xe6
PROTOCOL=serial
COMPILER=pgi

export MPICH_PTL_MATCH_OFF=1

MANTEVO_ROOT=$PWD

RESULTS_DIR=$MANTEVO_ROOT/"results-test"/$ARCH/
mkdir -p $RESULTS_DIR

EXEC=miniGhost.x

##########################################################################################
#                                          Input
##########################################################################################

SCALING=1
SCALING_S=strong

NUM_VARS=5
NUM_VARS_S=5vars

PERCENT_SUM=0
PERCENT_SUM_S=none

NUM_SPIKES=1
NUM_TSTEPS=50

ERROR_TOL=5
DEBUG_GRID=0
REPORT_DIFFUSION=1

NX=100
NY=100
NZ=100

##############################################################################################

COMM_METHOD=10
COMM_METHOD_S=bspma

STENCIL=21
STENCIL_S=2d5pt

aprun -n 1 ./$EXEC \
        --scaling $SCALING \
        --nx $NX \
        --ny $NY \
        --nz $NZ \
        --num_vars $NUM_VARS \
        --percent_sum $PERCENT_SUM \
        --num_spikes $NUM_SPIKES \
        --num_tsteps $NUM_TSTEPS \
        --stencil $STENCIL \
        --comm_method $COMM_METHOD \
        --error_tol $ERROR_TOL \
        --debug_grid $DEBUG_GRID \
        --report_diffusion $REPORT_DIFFUSION

mv results.yaml $RESULTS_DIR/results.$COMM_METHOD_S.$STENCIL_S.$ARCH.$PROTOCOL.$COMPILER.$SCALING_S.$DIM_S.$NUM_VARS_S.$PERCENT_SUM_S.yaml

